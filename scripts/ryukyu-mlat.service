
[Unit]
Description=ryukyu-mlat
Wants=network.target
After=network.target

[Service]
User=airplanes
RuntimeDirectory=ryukyu-mlat
ExecStart=/usr/local/share/airplanes/ryukyu-mlat.sh
Type=simple
Restart=always
RestartSec=30
StartLimitInterval=1
StartLimitBurst=100
SyslogIdentifier=ryukyu-mlat
Nice=-1

[Install]
WantedBy=default.target
